<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/margin"
    android:background="#26bbde"
    android:id="@+id/main"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="370dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="320dp"
                    android:id="@+id/cIM" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:id="@+id/coins"
                        android:scaleType="fitXY"
                        android:src="@drawable/coins" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:id="@+id/coinView"
                        android:textSize="50dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/mainView"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="80dp"
                        android:layout_height="92dp"
                        android:id="@+id/buyBanana"
                        android:scaleType="fitXY"
                        android:src="@drawable/banana" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="80dp"
                        android:layout_height="92dp"
                        android:id="@+id/buyApple"
                        android:scaleType="fitXY"
                        android:src="@drawable/apple" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageButton
                        android:background="@android:color/transparent"
                        android:layout_width="80dp"
                        android:layout_height="92dp"
                        android:id="@+id/buyPine"
                        android:scaleType="fitXY"
                        android:src="@drawable/pine" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="125dp"
                    android:weightSum="1">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="80dp"
                        android:layout_height="92dp"
                        android:id="@+id/buyOrange"
                        android:scaleType="fitXY"
                        android:src="@drawable/orange" />

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:background="@null"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton2"
                android:scaleType="fitXY"
                android:src="@drawable/prices" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/healthLay">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/healthView"
            android:progressDrawable="@drawable/progress_bar"
            android:max="100"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom">

            <ImageButton
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:id="@+id/h1"
                android:scaleType="fitXY"
                android:src="@drawable/heartfull" />

            <ImageButton
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:id="@+id/h2"
                android:scaleType="fitXY"
                android:src="@drawable/heartfull" />

            <ImageButton
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="92dp"
                android:id="@+id/h3"
                android:scaleType="fitXY"
                android:src="@drawable/heartfull" />

            <ImageButton
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="92dp"
                android:id="@+id/h4"
                android:scaleType="fitXY"
                android:src="@drawable/heartfull" />

            <ImageButton
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="92dp"
                android:id="@+id/h5"
                android:scaleType="fitXY"
                android:src="@drawable/heartfull" />
        </LinearLayout>
    </LinearLayout>

    <!-- Desired pace/speed row -->

</LinearLayout>
