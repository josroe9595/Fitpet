<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/margin"
    android:background="#ff6a87ff"
    android:id="@+id/main"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button11" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="380dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="280dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="280dp"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="@string/Fries"
                        android:id="@+id/textView3"
                        android:textColor="#ffffff08"
                        android:textSize="30sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_food"
                        android:id="@+id/button" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="@string/Pizza"
                        android:id="@+id/textView4"
                        android:textColor="#ffff5800"
                        android:textSize="30sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_food"
                        android:id="@+id/button2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="@string/Milk"
                        android:id="@+id/textView5"
                        android:textColor="#ffffffff"
                        android:textSize="30sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_food"
                        android:id="@+id/button3" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="@string/Carrot"
                        android:id="@+id/textView6"
                        android:textColor="#ffe8a100"
                        android:textSize="30sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_food"
                        android:id="@+id/button4" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="@string/Kale"
                        android:id="@+id/textView7"
                        android:textColor="#ff04a700"
                        android:textSize="30sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_food"
                        android:id="@+id/button5" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/margin"
            android:background="#ffff4304"
            android:layout_gravity="bottom"
            android:text="@string/Mood">

            <TextView
                android:id="@+id/textView2"
                android:gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="@string/Mood"
                android:background="#ffff4304"
                android:paddingBottom="@dimen/padding"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:textSize="@dimen/value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#ffff4304"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:textColor="#ff000000"
                android:text="--" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/row_1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/row_spacing">

        <LinearLayout android:id="@+id/box_steps"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/margin"
            android:background="#ff6a87ff">

            <TextView android:id="@+id/step_value"

                android:textSize="@dimen/value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#ff6a87ff"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:textColor="#ff000000"
                android:text="--" />

            <TextView android:id="@+id/step_units"
                android:gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="@string/Points"
                android:background="#ff6a87ff"
                android:paddingBottom="@dimen/padding"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff000000"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Desired pace/speed row -->

</LinearLayout>
